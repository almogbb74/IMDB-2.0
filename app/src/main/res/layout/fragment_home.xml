        android:paddingTop="8dp"
        android:layout_marginTop="50dp"
        android:layoutDirection="ltr"
        android:clipToPadding="false"
        tools:listitem="@layout/item_movie" />

</androidx.constraintlayout.widget.ConstraintLayout>